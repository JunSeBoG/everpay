<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EverPay" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray_s</item>
        <item name="colorSecondaryVariant">@color/gray_s</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/light_purple</item>
        <item name="android:navigationBarColor">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="editTextStyle" >
        <item name="android:background">@drawable/inputviews_bg</item>
        <item name="android:padding">14dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>
</resources>